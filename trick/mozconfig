# Build GeckoView/Firefox for Android:
ac_add_options --enable-project=mobile/android
# Targeting the following architecture.
# For regular phones, no --target is needed.
# For x86 emulators (and x86 devices, which are uncommon):
# ac_add_options --target=i686
# For newer phones or Apple silicon
ac_add_options --target=aarch64
# For x86_64 emulators (and x86_64 devices, which are even less common):
# ac_add_options --target=x86_64
ac_add_options --disable-debug
ac_add_options --enable-release
ac_add_options --enable-optimize
ac_add_options --disable-webrtc
#ac_add_options --disable-printing
ac_add_options --disable-profiling
ac_add_options --enable-minify
ac_add_options --disable-wmf
ac_add_options --disable-ffmpeg
#ac_add_options --disable-av1
ac_add_options --disable-jxl

ac_add_options --disable-geckodriver
ac_add_options --disable-webdriver
ac_add_options RUSTC_OPT_LEVEL= z
ac_add_options OS_ARCH_OPT_LEVEL= z
ac_add_options MOZ_STDCXX_COMPAT_OPT_LEVEL= z
ac_add_options MOZ_BUILD_APP_OPT_LEVEL= z
ac_add_options MOZ_DMD_OPT_LEVEL= z
ac_add_options --enable-optimize=-Oz

ac_add_options --disable-tests
